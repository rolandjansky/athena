	    <chaindataset_info>
	      <jobTransformData/>
	      <chaindatasetName>SLHCtest.LOI.HITS.pool.root</chaindatasetName>
	      <dataset_info>
		<jobTransformData/>
		<datasetName>NONE.pool.root</datasetName>
	      </dataset_info>
	    </chaindataset_info>
	    <queue>medium</queue>
	  </jobTransform>
	  <chainfileout>SLHCtest.LOI.RDO.pool.root</chainfileout>
