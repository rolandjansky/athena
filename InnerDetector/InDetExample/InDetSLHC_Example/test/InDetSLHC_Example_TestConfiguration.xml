	    <doc>SLHCSimulation</doc>
	    <jobTransformJobName>chainSimLOISLHCRTT</jobTransformJobName>
	    <jobTransformCmd>
	      AtlasG4_tf.py --inputEVNTFile=/afs/cern.ch/atlas/offline/ProdData/15.6.11.3/e_E50_eta0-25-7000.evgen.pool.root --outputHITSFile=SLHCtest.LOI.HITS.pool.root --maxEvents=500 --skipEvents=0 --randomSeed=10 --preInclude='sim:InDetSLHC_Example/preInclude.SLHC.py,InDetSLHC_Example/preInclude.SiliconOnly.py' --geometryVersion=ATLAS-P2-ITK-01-00-00_VALIDATION --conditionsTag=OFLCOND-ATLAS-HL-LHC-00 --postInclude='sim:InDetSLHC_Example/postInclude.SLHC_Setup.py'
