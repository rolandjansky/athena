use AtlasCLHEP AtlasCLHEP-00-* External 
use AtlasExternalArea AtlasExternalArea-00-* External 

author  Ian Hinchliffe <I_Hinchliffe@lbl.gov>  
author Borut Paul Kersevan <Borut.Kersevan@cern.ch>
package Tauola
macro Tauola_home "${ATLAS_EXTERNAL}/tauola/tauola-cleo"
macro Tauola_native_version "v27feb06"
 
macro TAUOLA_PLATFORM        "$(LCG_ext_system)" \
      i686-slc3-gcc323-dbg   "i686-slc3-gcc323-opt" \
      i686-slc3-gcc323-opt   "i686-slc3-gcc323-opt" \
      i686-slc4-gcc345-dbg   "i686-slc4-gcc345-opt" \
      i686-slc4-gcc345-opt   "i686-slc4-gcc345-opt" \
      x86_64-slc4-gcc345-dbg "x86_64-slc4-gcc345-opt" \
      x86_64-slc4-gcc345-opt "x86_64-slc4-gcc345-opt" \
      i686-slc4-gcc34-dbg    "i686-slc4-gcc345-opt" \
      i686-slc4-gcc34-opt    "i686-slc4-gcc345-opt" \
      x86_64-slc4-gcc34-dbg  "x86_64-slc4-gcc345-opt" \
      x86_64-slc4-gcc34-opt  "x86_64-slc4-gcc345-opt" \
      i686-slc4-gcc43-dbg    "i686-slc4-gcc345-opt" \
      i686-slc4-gcc43-opt    "i686-slc4-gcc345-opt" \
      x86_64-slc4-gcc43-dbg  "x86_64-slc4-gcc345-opt" \
      x86_64-slc4-gcc43-opt  "x86_64-slc4-gcc345-opt" \
      i686-slc5-gcc34-dbg    "i686-slc5-gcc34-opt" \
      i686-slc5-gcc43-dbg    "i686-slc5-gcc43-opt" \
      x86_64-slc5-gcc34-dbg  "x86_64-slc4-gcc345-opt" \
      x86_64-slc5-gcc34-opt  "x86_64-slc4-gcc345-opt" \
      x86_64-slc5-gcc43-dbg  "x86_64-slc4-gcc345-opt" \
      x86_64-slc5-gcc43-opt  "x86_64-slc4-gcc345-opt" \
      x86_64-slc6-gcc46-dbg  "x86_64-slc6-gcc46-opt" \
      x86_64-slc6-gcc48-dbg  "x86_64-slc6-gcc48-opt"

macro TAUOLA_BASE_DIR  "$(Tauola_home)/$(Tauola_native_version)/installed/$(TAUOLA_PLATFORM)"
macro TAUOLA_LIB_DIR  "$(TAUOLA_BASE_DIR)/lib"

macro Tauola_export_paths "$(TAUOLA_LIB_DIR)" 

macro Tauola_tauolopts "-L$(TAUOLA_LIB_DIR) -ltauola" 
macro Tauola_photlopts "-L$(TAUOLA_LIB_DIR) -lphotos" 
macro Tauola_linkopts "$(TAUOLA_LIB_DIR)/libtauola.a $(TAUOLA_LIB_DIR)/libphotos.a" 

private
macro Tauola_libraries "$(TAUOLA_LIB_DIR)/libtauola.$(shlibsuffix) \
                        $(TAUOLA_LIB_DIR)/libphotos.$(shlibsuffix)"
end_private

