package AtlasBaurMC 

author  Andrea Bocci <andrea.bocci@cern.ch>
author  Zhijun Liang <zhijun.liang@cern.ch>  

use AtlasExternalArea AtlasExternalArea-* External
use Lhapdf         Lhapdf-*            External
use Pythia           Pythia-*               External
use LCG_Configuration


macro AtlasBaurMC_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(LCG_config_version)/baurmc"
macro atlasbaurmc_native_version "1.0"
macro AtlasBaurMC_native_version $(atlasbaurmc_native_version)_lcgcmt$(LCG_config_version)
macro baurmc_system "$(LCG_ext_system)" \
     slc4&gcc43&32 "slc4_ia32_gcc34" \
      slc4&gcc43    "slc4_amd64_gcc34"
macro AtlasBaurMC_lib "$(AtlasBaurMC_home)/$(atlasbaurmc_native_version)/$(baurmc_system)/lib"
macro AtlasBaurMC_linkopts "-L$(AtlasBaurMC_lib)  -lwgamma  "
macro AtlasBaurMC_export_paths  "$(AtlasBaurMC_home)/$(atlasbaurmc_native_version)/$(baurmc_system)"
private
macro AtlasBaurMC_libraries "$(AtlasBaurMC_lib)/libwgamma.so"
macro AtlasBaurMC_include_objfiles "yes"

