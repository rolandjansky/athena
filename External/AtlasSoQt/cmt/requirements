package AtlasSoQt

author Thomas Kittelmann <Thomas.Kittelmann@cern.ch>

use AtlasExternalArea AtlasExternalArea-* External
use AtlasCoinInventor AtlasCoinInventor-* External
use AtlasQt4          AtlasQt4-*          External

macro AtlasSoQt_soqt_version "1.5.0"
macro AtlasSoQt_native_version "$(AtlasSoQt_soqt_version)_qt$(qt_config_version)_coin3d$(AtlasCoinInventor_native_version)"
macro AtlasSoQt_home    "$(LCG_external)/soqt/$(AtlasSoQt_native_version)/$(LCG_system)"

include_path none
include_dirs "$(AtlasSoQt_home)/include"

macro AtlasSoQt_lib_dir      "$(AtlasSoQt_home)/lib"

macro AtlasSoQt_linkopts     "-L$(AtlasSoQt_lib_dir) -lSoQt "

path_remove LD_LIBRARY_PATH "/SoQt/"
path_append LD_LIBRARY_PATH "$(AtlasSoQt_lib_dir)"
path_remove DYLD_LIBRARY_PATH "/SoQt/"
path_append DYLD_LIBRARY_PATH "$(AtlasSoQt_lib_dir)"

macro AtlasSoQt_export_paths "$(AtlasSoQt_home)"

