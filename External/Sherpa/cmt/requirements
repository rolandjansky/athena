package Sherpa

author <George.Stavropoulos@cern.ch> <binet@cern.ch> <jsvirzi@cern.ch> <frank.siegert@cern.ch>

public
use AtlasExternalArea AtlasExternalArea-* External
use AtlasPolicy AtlasPolicy-*
use LCG_Configuration

macro myLCG_config_version "67c"

macro sherpa_native_version "2.2.0"
# NOTE "a" added to Sherpa_native_version - to be removed by next version update
macro Sherpa_native_version "$(sherpa_native_version)a_lcgcmt$(myLCG_config_version)"
#macro Sherpa_home "$(LCG_external)/MCGenerators/sherpa/$(sherpa_native_version)/$(LCG_ext_system)"
macro Sherpa_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(myLCG_config_version)/sherpa/$(sherpa_native_version)/$(LCG_ext_system)"
#macro Sherpa_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt61g/sherpa/$(sherpa_native_version)/$(LCG_ext_system)"
macro Sherpa_lib "$(Sherpa_home)/lib/SHERPA-MC"
macro Sherpa_inc "$(Sherpa_home)/include/SHERPA-MC"
macro Sherpa_moduledir "$(Sherpa_lib)"

macro Sherpa_export_paths " $(Sherpa_home)"

macro        Sherpa_linkopts " -L$(Sherpa_lib) -lSherpaMain "
macro_append Sherpa_linkopts "" \
             notAsNeeded     "" \
             asNeeded        " -Wl,--no-as-needed "
macro_append Sherpa_linkopts " -lToolsOrg -lToolsMath "
macro_append Sherpa_linkopts "" \
             notAsNeeded     "" \
             asNeeded        " -Wl,--as-needed "

apply_pattern declare_installed_libraries dir=$(Sherpa_lib)

include_path none
include_dirs "$(Sherpa_inc)"
