package Ant

author Julius Hrivnac <Julius.Hrivnac@cern.ch>

branches ant doc

use JavaSDK JavaSDK-01-* External 
use AtlasExternalArea AtlasExternalArea-00-* External 

macro ANT_VERSION "1.7.0"
set   ANT_HOME    "${JAVA_BASE}/Ant/${ANT_VERSION}/share"

path_remove PATH "Ant"
path_prepend PATH "${ANT_HOME}/bin" noJava ""

set ANT_SITE "CMT"

make_fragment ant -header=dummy

pattern ant_jar_and_doc document ant jar ../ant/build.xml anttarget=jar ; \
                        document ant doc ../ant/build.xml anttarget=doc ; \
			                  macro <package>.core "${<PACKAGE>ROOT}/lib/<package>.jar" ; \
                        document installer install_jars "${<PACKAGE>ROOT}/lib/*.jar" install_dir="$(CMTINSTALLAREA)/share/lib" ; \
			                  document installdoc install_docs ../doc

apply_pattern install_docs
			
macro Ant_export_paths   "${ANT_HOME}"
macro Ant_native_version "${ANT_VERSION}"
macro Ant_platform "" PACK noarch



