package Starlight
author  Andrzej Olszewski<Andrzej.Olszewski@ifj.edu.pl>  

use AtlasPolicy AtlasPolicy-*
use AtlasExternalArea AtlasExternalArea-* External
use LCG_Configuration

macro myLCG_config_version "67c"
# Adapting stantard macros for export
#macro Starlight_home 	    "$(LCG_external)/MCGenerators/starlight"
macro Starlight_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(myLCG_config_version)/starlight"
macro starlight_native_version "r193"
macro Starlight_native_version "$(starlight_native_version)_lcgcmt$(LCG_config_version)"

macro Starlight_dir "$(Starlight_home)/$(starlight_native_version)/$(LCG_ext_system)" 
macro Starlight_inc "$(Starlight_dir)/include" 

macro Starlight_lib "$(Starlight_dir)/lib" 

macro        Starlight_linkopts " -L$(Starlight_lib) -lStarlib"

#macro_append Starlight_linkopts "" \
#             64  " /usr/lib64/libg2c.so.0 " \
#             gcc43  " /usr/lib/libg2c.so.0 " \
#             Linux           " -lg2c"

macro_append Starlight_linkopts " -lm -ldl"

include_path none
include_dirs $(Starlight_inc) 

private
macro Starlight_libraries " $(Starlight_lib)/libStarlib.so "
end_private
 
macro Starlight_export_paths "$(Starlight_dir)" 

path_prepend LD_LIBRARY_PATH "$(Starlight_lib)"
