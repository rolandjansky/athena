package MadGraph

author Zach Marshall <zach.marshall@cern.ch>

use ExternalPolicy ExternalPolicy-*   External

# Adapt standard macros for export
macro MadGraph_home "${SITEROOT}/atlas/offline/external/madgraph" \
        BNL         "${SITEROOT}/cernsw/madgraph" \
        LBNL        "${SITEROOT}/sw/madgraph" \
        EXTSITE     "${SITEROOT}/madgraph" \
        STANDALONE  "${SITEROOT}/madgraph"

macro MadGraph_native_version "MG5_aMC_v2_3_3"

set MADPATH "$(MadGraph_home)/$(MadGraph_native_version)"

macro MadGraph_export_paths "$(MadGraph_home)/$(MadGraph_native_version)"

# This is how we would copy files instead of copying links
#macro MadGraph_follow_symlinks "" PACK yes

apply_pattern install_external_home

