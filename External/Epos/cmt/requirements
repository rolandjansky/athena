package Epos

author  Sami Kama <sami.kama@cern.ch>
	
use AtlasPolicy       AtlasPolicy-*
use LCG_Configuration
use AtlasExternalArea AtlasExternalArea-* External

# to be fixed when epos is properly installed in LCG
macro Epos_home "$(LCG_ROOT)/external/MCGenerators_lcgcmt$(LCG_config_version)/crmc"
macro EPOS_native_version "v3400"
macro Epos_native_version "$(EPOS_native_version)_lcgcmt$(LCG_config_version)"
macro Epos_system "$(LCG_ext_system)" \
      slc4&gcc43&32 "slc4_ia32_gcc34" \
      slc4&gcc43    "slc4_amd64_gcc34" \
      slc5&gcc43&32 "i686-slc5-gcc43-opt" \
      slc5&gcc43&64 "x86_64-slc5-gcc43-opt"
macro Epos_lib "$(Epos_home)/$(EPOS_native_version)/$(Epos_system)/lib"

macro Epos_linkopts "-L$(Epos_lib) -lcrmc " target-darwin "$(Epos_lib)/libcrmc.a"

include_path none
include_dirs "$(Epos_home)/$(EPOS_native_version)/$(Epos_system)/include"

macro Epos_export_paths \
	"$(Epos_home)/$(EPOS_native_version)/$(Epos_system)"

macro EposExternalFiles \
	"$(Epos_home)/$(EPOS_native_version)/$(Epos_system)/"

apply_pattern generic_declare_for_copy kind=runtime prefix=share files="$(EposExternalFiles)/crmc.param \
   $(EposExternalFiles)/tabs/qgsjet.dat    \
   $(EposExternalFiles)/tabs/qgsjet.ncs    \
   $(EposExternalFiles)/tabs/sectnu-II-03  \
   $(EposExternalFiles)/tabs/epos.initl    \
   $(EposExternalFiles)/tabs/epos.iniev    \
   $(EposExternalFiles)/tabs/epos.inirj    \
   $(EposExternalFiles)/tabs/epos.inirj.lhc  \
   $(EposExternalFiles)/tabs/epos.inics    \
   $(EposExternalFiles)/tabs/epos.inics.lhc "

private
macro Epos_libraries "$(Epos_lib)/libcrmc.so $(Epos_lib)/libcrmc.a"

macro Epos_include_objfiles "yes"
end_private
